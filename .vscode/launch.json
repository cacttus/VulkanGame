  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/VulkanGame-0.1.0-x86_64-d",
      "args": ["log_async=false","package_loc=_debug"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerArgs": "",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true,
        },
        //'raise.c' issues.
        //https://github.com/Microsoft/vscode-cpptools/issues/1738
        {
          "description": "Skip <path> files",
          "text": "-interpreter-exec console \"skip -gfi /build/glibc-YYA7BZ/glibc-2.31/**/*\""
        }
      ]
    },
    // Looks like lldb isn't supported in vscode on linux
    // https://code.visualstudio.com/docs/cpp/cpp-debug
    //This is easy to mess up.
    //See these for cmake + vscode + lldb inegration:
    //https://github.com/Microsoft/vscode-cpptools/issues/2456
    //https://stackoverflow.com/questions/56344186/unable-to-start-debugging-the-value-of-midebuggerpath-is-invalid
    //https://medium.com/audelabs/c-development-using-visual-studio-code-cmake-and-lldb-d0f13d38c563
