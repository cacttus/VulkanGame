{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      //  See this https://vector-of-bool.github.io/docs/vscode-cmake-tools/debugging.html
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/VulkanGame-0.1.0-x86_64-d", //"${workspaceFolder}/bin/VulkanGame-0.1.0-x86_64-d",
      "args": [
        "log_async=false",
        "package_loc=_debug"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      //"miDebuggerPath": "/usr/bin/gdb",
      //"miDebuggerArgs": "",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true,
        },
        //'raise.c' issues.
        //https://github.com/Microsoft/vscode-cpptools/issues/1738
        {
          "description": "Skip <path> files",
          "text": "-interpreter-exec console \"skip -gfi /build/glibc-YYA7BZ/glibc-2.31/**/*\""
        }
      ]
    },
  ]
}